<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navbar_off_white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_help_grey600_36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/helplogo"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="14sp"
        android:minHeight="36sp"
        android:gravity="center"
        android:id="@+id/help"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/helplogo"
        android:textColor="@color/article_dart_grey"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:src="@drawable/kanshu_gray"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/aboutlogo"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:minHeight="36sp"
        android:textSize="14sp"
    android:text="About"
    android:id="@+id/about"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/aboutlogo"
        android:textColor="@color/article_dart_grey"
/>
    </RelativeLayout>
</LinearLayout>