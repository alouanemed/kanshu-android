<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SignupActivity"
    android:background="@color/background_material_dark">

    <TextView android:text="@string/kanshucaption" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text_default_material_dark"
        android:textSize="16sp"
        android:id="@+id/mainheadline"
        android:layout_marginTop="159dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_marginTop="15sp"
        android:text="@string/email"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:textSize="14sp"
        android:textIsSelectable="true"
        android:layout_below="@+id/mainheadline"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="4dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/username"
        android:ems="10"
        android:id="@+id/username"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="4dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:text="Password"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="@string/signin_text"
        android:id="@+id/signin"
        android:layout_marginTop="0dp"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:layout_below="@+id/spinner"
        android:layout_gravity="center_horizontal"
        android:layout_alignRight="@+id/password"
    android:layout_alignEnd="@+id/password"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_text"
        android:id="@+id/button"
        android:background="#d32f2f"
        android:textColor="#ffffffff"
        android:typeface="normal"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="10sp"
        android:layout_marginTop="10sp"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true"
        android:minHeight="30dp"
        android:minWidth="68dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:prompt="@string/readinglevel_picker_prompt"
        android:entries="@array/readinglevels"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="-5dp"
        android:background="@drawable/ic_dropdown"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/splash_screen"
        android:layout_alignBottom="@+id/mainheadline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skip"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:id="@+id/skipText"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="registering lets you save your progress and choices"
            android:id="@+id/registerText"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:layout_alignBaseline="@+id/skipText"
            android:layout_alignBottom="@+id/skipText"
            android:layout_toRightOf="@+id/skipText"
            android:layout_toEndOf="@+id/skipText"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:id="@+id/next"
            android:layout_gravity="end"
            android:layout_alignBaseline="@+id/registerText"
            android:layout_alignBottom="@+id/registerText"
            android:layout_toRightOf="@+id/registerText"
            android:layout_toEndOf="@+id/registerText"
            android:singleLine="true"
            android:textSize="24sp"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" />

    </RelativeLayout>


</RelativeLayout>
